<div class="box">
  <h1>سعر الذهب الآن</h1>

  <div class="row"><span>عيار 24</span><span id="g24">...</span></div>
  <div class="row"><span>عيار 22</span><span id="g22">...</span></div>
  <div class="row"><span>عيار 21</span><span id="g21">...</span></div>
  <div class="row"><span>عيار 18</span><span id="g18">...</span></div>

  <div class="time" id="time"></div>
</div>

<script>
async function getGold() {
  const res = await fetch("https://api.metals.live/v1/spot");
  const data = await res.json();
  const ouncePrice = data.find(i => i[0] === "gold")[1];

  const gram24 = ouncePrice / 31.1035;

  document.getElementById("g24").innerText = gram24.toFixed(2) + " $";
  document.getElementById("g22").innerText = (gram24 * 0.916).toFixed(2) + " $";
  document.getElementById("g21").innerText = (gram24 * 0.875).toFixed(2) + " $";
  document.getElementById("g18").innerText = (gram24 * 0.750).toFixed(2) + " $";

  document.getElementById("time").innerText =
    "آخر تحديث: " + new Date().toLocaleTimeString();
}

getGold();
setInterval(getGold, 60000);
</script>

